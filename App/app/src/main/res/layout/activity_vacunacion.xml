<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vacunacion">
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fondoverde" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/BT_ING_DET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#55A84E"
            android:fontFamily="serif"
            android:onClick="INGRESO"
            android:text="Ingreso"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/TT_FECHA_REVACUNACION"
            android:layout_width="210dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:inputType="date"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/BT_ING_DET"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="427dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toTopOf="@+id/textView22"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/TT_DESC"
                    android:layout_width="383dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:text="Descripción"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TT_FRAB"
                    android:layout_width="394dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:text="Fabricación"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </TableRow>

        <EditText
            android:id="@+id/TT_LOTE"
            android:layout_width="224dp"
            android:layout_height="43dp"
            android:layout_marginBottom="28dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:inputType="text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tableRow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toEndOf="@+id/textView18" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:fontFamily="serif-monospace"
            android:text="N LOTE:"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/TT_LOTE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/TT_LOTE"
            app:layout_constraintVertical_bias="0.565" />

        <Spinner
            android:id="@+id/SPVacuna"
            android:layout_width="129dp"
            android:layout_height="28dp"
            android:layout_marginEnd="28dp"
            android:layout_weight="1"
            android:background="@color/VerdeClaroMascota"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/TP_VACUNA" />

        <Spinner
            android:id="@+id/TP_VACUNA"
            android:layout_width="156dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="72dp"
            android:layout_weight="1"
            android:background="@color/VerdeClaroMascota"
            app:layout_constraintBottom_toTopOf="@+id/textView18"
            app:layout_constraintEnd_toStartOf="@+id/SPVacuna"
            app:layout_constraintHorizontal_bias="0.146"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/SPMascota"
            android:layout_width="212dp"
            android:layout_height="50dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            android:background="@color/VerdeClaroMascota"
            app:layout_constraintBottom_toTopOf="@+id/TP_VACUNA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="145dp"
            android:layout_height="34dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:fontFamily="serif-monospace"
            android:text="Mascota"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/SPMascota"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/SPMascota"
            app:layout_constraintVertical_bias="0.812" />

        <TextView
            android:id="@+id/APELLIDO_CLI"
            android:layout_width="135dp"
            android:layout_height="23dp"
            android:layout_marginEnd="236dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="1"
            android:fontFamily="serif-monospace"
            android:text="Apellido"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/SPMascota"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/NOMBRE_CLI"
            android:layout_width="134dp"
            android:layout_height="21dp"
            android:layout_marginStart="184dp"
            android:layout_weight="1"
            android:fontFamily="serif-monospace"
            android:text="Nombre"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/APELLIDO_CLI"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/APELLIDO_CLI"
            app:layout_constraintVertical_bias="1.0" />

        <Spinner
            android:id="@+id/SPCedulaBuscar"
            android:layout_width="126dp"
            android:layout_height="46dp"
            android:layout_marginEnd="52dp"
            android:background="@color/VerdeClaroMascota"
            app:layout_constraintBottom_toTopOf="@+id/NOMBRE_CLI"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:layout_constraintVertical_bias="0.56" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:fontFamily="serif-monospace"
            android:text="Seleccione Cedula"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/APELLIDO_CLI"
            app:layout_constraintEnd_toStartOf="@+id/SPCedulaBuscar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:layout_constraintVertical_bias="0.564" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="166dp"
            android:layout_height="151dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/vacunada" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="Fecha de Reaplicacion"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/TT_FECHA_REVACUNACION"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>